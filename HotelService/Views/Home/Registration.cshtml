@model HotelService.Models.RegistrationForm

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Registration</title>
    <link rel="stylesheet" href="@Href("~/Content/Site.css")" type="text/css" />
</head>
<body>
    <p>Пожалуйста, заполните все необходимые поля и нажмите на кнопку "Завершить регистрацию"</p>
    <div>
        @using (Html.BeginForm())
        {
            @Html.ValidationSummary()
            <p>Ваша фамилия: @Html.TextBoxFor(x => x.Surname)</p>
            <p>Ваше имя: @Html.TextBoxFor(x => x.Name)</p>
            <p>Ваше отчество: @Html.TextBoxFor(x => x.MiddleName)</p>
            <p>Ваш телефон: @Html.TextBoxFor(x => x.Phone)</p>
            <p>Выберите комнату: @Html.DropDownListFor(x => x.SelectedRoom.Name, new SelectList(ViewBag.Rooms, "Name", "Name"))</p>
            <input type="submit" value="Завершить регистрацию" />
        }
    </div>
</body>
</html>
